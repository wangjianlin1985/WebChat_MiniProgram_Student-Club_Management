.menu {
  width: 700rpx;
  margin: 20rpx 25rpx -100rpx 25rpx;
  padding: 25rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px rgb(0 0 0 / 35%);
}

.title {

  height: 65rpx;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;

  margin-left: 20rpx;
  margin-top: 20rpx;
}

.bg-red {
  background-image: linear-gradient(45deg, #EA9B6C, #e54d42);
}

.bg-orange {
  background-image: linear-gradient(45deg, #F8A969, #f37b1d);
}

.bg-yellow {
  background-image: linear-gradient(45deg, #FDDA71, #fbbd08);
}

.bg-olive {
  background-image: linear-gradient(45deg, #B4DA81, #8dc63f);
}

.bg-green {
  background-image: linear-gradient(45deg, #8BDA95, #39b54a);
}

.bg-darkgreen {
  background-image: linear-gradient(45deg, #15DFD0, #0E9489);
}

.bg-cyan {
  background-image: linear-gradient(45deg, #2FDFD7, #1cbbb4);
}

.bg-blue {
  background-image: linear-gradient(45deg, #48A4FF, #0081ff);
}

.bg-purple {
  background-image: linear-gradient(45deg, #9B78D6, #6739b6);
}

.bg-mauve {
  background-image: linear-gradient(45deg, #C654DA, #9c26b0);
}

.bg-pink {
  background-image: linear-gradient(45deg, #EB81BE, #e03997);
}

.bg-brown {
  background-image: linear-gradient(45deg, #C8936F, #a5673f);
}

.item-circle {
  height: 85rpx;
  width: 85rpx;
  border-radius: 50%;
  box-shadow: 7rpx 7rpx 11rpx #ccc;
  border: 1rpx solid #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.item-circle image {
  height: 40rpx;
  width: 40rpx;
}

.menu-item {
  padding: 10rpx 0rpx;
  font-size: 14px;
}


.notice {
  width: 700rpx;
  margin: 150rpx 25rpx 20rpx 25rpx;
  background-color: #fff;
  padding: 20rpx 0rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px rgb(0 0 0 / 35%);
}

.notice .flexrow {
  flex-direction: row;
  justify-content: space-between;
}

.notice .flexrow .more {
  color: #888;
  height: 65rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
  margin-top: 25rpx;
}

.news-list {
  width: 100%;
  display: flex;
  flex-direction: column;

}

.news-list .news-list-item {
  width: 100%;
  display: flex;
  padding: 20rpx 20rpx;
  position: relative;
}

.news-list .line {
  height: 1rpx;
  width: 95%;
  background-color: #ddd;
  align-self: center;
}

.news-list .line:last-child {
  height: 0rpx;
}

.news-list .news-list-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.news-list .news-list-item .redhot {
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  left: 107rpx;
  top: 15rpx;
  background-color: red;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.news-list .news-list-item .news-list-item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.news-list-item-right .headline {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  width: 700rpx;
  text-align: start;
}

.news-list-item-right .date {
  font-size: 26rpx;
  color: #666;
  margin-top: 20rpx;
}