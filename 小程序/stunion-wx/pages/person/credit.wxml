<view class="lists">
  <view bindtap="homework" data-item="{{item}}" class="weui-panel__bd" wx:for="{{lists}}" wx:key="index" wx:if="{{item.iscredit==1}}">
    <view class="weui-media-box weui-media-box_text">
      <text class="weui-media-box__title">活动学分：{{item.credit}}</text>
      <view class="weui-media-box__desc">{{item.activityIdTxt}}</view>
      <view class="weui-media-box__info">
        <view class="weui-media-box__info__meta">{{item.createdAt}}</view>
      </view>
    </view>
    <view class="line5"></view>
  </view>
</view>